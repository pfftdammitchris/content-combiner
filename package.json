{
  "name": "@jsm/posts-aggregator",
  "version": "0.0.1",
  "main": "dist/posts-aggregator.cjs.js",
  "module": "dist/posts-aggregator.esm.js",
  "browser": "dist/posts-aggregator.umd.js",
  "typings": "dist/types/posts-aggregator.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.5",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.27.1",
    "sinon": "^9.0.3",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "run-p build:js build:types",
    "build:js": "rm -rf dist && rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir dist/types",
    "start": "rollup -c -w",
    "test": "ts-mocha -r ts-node/register --extensions ts --watch --watch-files src src/**/*.test.ts --file src/__tests__/setupTests.ts",
    "test:file": "ts-mocha -r ts-node/register --extensions ts --watch --watch-files src --file src/__tests__/setupTests.ts -- "
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
